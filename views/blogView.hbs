<h2>Blog, <span class="cust-highlight">{{blog.title}}</span></h2>
<div class="row">
    <div class="col s12 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title" id="title" data-id="{{blog.id}}"></span>
          <p>{{blog.body}}</p>
          <h6>By {{blog.user.name}}</h6>
        </div>
      </div>
    </div>
</div>
{{#if blog.comments.length}}
<h3>Discussion Board</h3>             
  {{#each blog.comments as |comment|}}
      {{> comment }}
  {{/each}}
{{/if}}
{{#if logged_in}}
    <div class="card">
        <h4 class="card-header">New Comment</h4>
        <form class="card-body comment-form" id="comment-form">

            <label class="form-label">Share Your Thoughts</label>
            <input id="comment" name="comment-body" class="form-input" />

            <button type="submit" class="btn">Contribute</button>
        </form>
    </div>
    <script type="text/javascript" src="/js/comment.js"></script>
{{/if}}