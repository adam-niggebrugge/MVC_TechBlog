{{#if blogs.length}}
    {{#each blogs as |blog|}}
        <section class="row">
          <article class="col s12 m6">
            <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                    <span class="card-title">{{title}}</span>
                    <blockquote>
                        <h5>Preview</h5>
                        <p class="truncate">{{body}}</p>
                    </blockquote>
                    <h6>Created On {{format_date date_created}}</h6>
                    <a href="/blogs/{{id}}">Read More</a>
                     {{!-- {{#if isAuthor}}
                        <i class="fa fa-pencil"></i><a href="/blogs/edit/{{id}}">Edit</a>
                    {{/if}} --}}
                </div>
            </div>
          </article>
        </section>
    {{/each}}
{{else}}
    <h2>No Blogs Currently Found!!!</h2>
{{/if}}