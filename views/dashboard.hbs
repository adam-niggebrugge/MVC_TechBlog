{{#if blogs.length}}
  <div class="col-md-6 project-list">
    <h3>Your Blogs:</h3>
    {{#each blogs as |blog|}}
        <div class="row">
    <div class="col s12 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title" id="title" data-id="{{id}}">{{title}}</span>
          <p>{{body}}</p>
          <h6>By {{user.name}}</h6>
        </div>
        {{#if isAuthor}}
          <div class="card-action">
            <a class="btn btn-primary" href="/blogs/edit/{{id}}">Review</a>
          </div>
        {{/if}}
      </div>
    </div>
  </div>
    {{/each}}
  </div>
{{else}} 
<div>
  <h3>You have yet to create a blog!!</h3>
</div>
{{/if}}