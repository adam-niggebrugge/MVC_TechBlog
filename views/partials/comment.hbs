<div class="comments">
  {{#each this}}
    <div class="card">
        <h3 class="card-header"></h3>
        <section class="comment card-body">
            <div class="text">
                {{body}}
            </div>
            <div class="meta">
                from: {{user.username}}, posted: {{format_date created_at}}
            </div>
        </section>
    </div>
  {{/each}}
</div>