<h3>New Blog</h3>

<form class="form" action="">
    <section class="form-group">
        <label for="blogTitle">Title</label>
        <input type="text" class="form-control" name="blogTitle" id="blogTitle"/>
    </section>
    <section class="form-group">
        <label for="blogBody" class="formbuilder-textarea-label">Text Area</label>
        <textarea type="textarea" class="form-control" name="blogBody" id="blogBody"></textarea>
    </section>
    <div class="form-group">
        <button type="submit" class="btn" name="createBlog" id="createBlog">Create Blog</button>
    </div>
</div>